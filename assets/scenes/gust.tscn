script/source = "extends Node2D

@export var ROTATION_SPEED = 6
@export var DESPAWN_PERIOD = 5.0

@onready var _sprite = $Sprite2D

var _ccw : int = 1
var _velocity : Vector2 = Vector2(0, 0)
var _timer : float = 0.0

# Called when the node enters the scene tree for the first time.
func _ready():
	hide()
	
func spawn(pos, vel, ccw, lifetime):
	_ccw = ccw
	_sprite.flip_h = (_ccw == 1)
	position = pos
	_velocity = vel
	_timer = DESPAWN_PERIOD * lifetime

# Called every frame. 'delta' is the elapsed time since the previous frame.
func _process(delta):
	rotate(ROTATION_SPEED * delta * _ccw)
	position += _velocity * delta
	_timer -= delta
	if _timer <= 0:
		hide()


func _on_area_2d_body_entered(body):
	# hit some solid object
	print(body)
	hide()
